{
    "manifest_version": 3,
    "name": "Clear Glass",
    "description": "Remove obstructions from the top job review sites",
    "version": "1.2.2",
    "action": {
        "default_popup": "splash.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.teamblind.com/*",
                "https://*.repvue.com/*",
                "https://*.glassdoor.com/*",
                "https://*.glassdoor.ca/*",
                "https://*.glassdoor.de/*",
                "https://*.glassdoor.co.uk/*",
                "https://*.glassdoor.co.nz/*",
                "https://*.glassdoor.co.mx/*",
                "https://*.glassdoor.co.in/*",
                "https://*.glassdoor.com.au/*"
            ],
            "js": ["dist/removeBlockers.js"],
            "run_at": "document_start"
        }
    ]
}
