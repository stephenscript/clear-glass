{
    "manifest_version": 3,
    "name": "Clear Glass",
    "description": "Remove obstructions from the top job review sites",
    "version": "1.1.0",
    "action": {
        "default_popup": "splash.html",
        "default_icon": "icon16.png"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.glassdoor.com/*",
                "https://*.teamblind.com/*",
                "https://*.repvue.com/*"
            ],
            "js": ["main.js"],
            "run_at": "document_start"
        }
    ]
}
