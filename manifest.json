{
    "manifest_version": 3,
    "name": "Clear Glass",
    "description": "Remove obstructions from Glassdoor",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "scripting"],
    "action": {
        "default_popup": "splash.html",
        "default_icon": "icon16.png"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.glassdoor.com/*"],
            "js": ["removeBlockers.js"]
        }
    ]
}
